#importing all required modules
import string
import random
def password():
    #creating a list of all lowercase, uppercase, charecters & numbers
    lower = list(string.ascii_lowercase)
    upper = list(string.ascii_uppercase)
    char = ['!', '@', '#', '$', '%', '&', '*', '<', '>', '?']
    num = list(range(10))
    passlist = []
    # random selection of uppercase letters
    count = random.randint(1, 3)
    upperlist = random.sample(upper, count)
    # appending the randomly selected set of letter to passlist
    for items in upperlist:
        passlist.append(items)
    count = random.randint(3, 5)
    lowerlist = random.sample(lower, count)
    for items in lowerlist:
        passlist.append(items)
    count = random.randint(2, 4)
    numlist = random.sample(num, count)
    for items in numlist:
        items = str(items)
        passlist.append(items)
    count = random.randint(3, 4)
    charlist = random.sample(char, count)
    for items in charlist:
        passlist.append(items)
    #shuffling list of all characters
    random.shuffle(passlist)
    password = ''
    # creating a password by adding all character
    for items in passlist:
        password += items
    return password
print(password())
